extends layout

block content
  if error
    div #{error}
  if success
    div #{success}
  span Login
  form(name="login", action="/login/post", method="POST")
    input(type="text", name="user")
    input(type="password", name="pass")
    input(type="submit", value="Log In")
  span Sign Up
  form(name="signup", action="/create/post", method="POST")
    input(type="text", name="user")
    input(type="password", name="pass")
    input(type="password", name="confirm-pass")
    input(type="text", name="email")
    input(type="text", name="confirm-email")
    input(type="submit", value="Sign Up")
